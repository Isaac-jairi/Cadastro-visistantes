    <a class="dropdown-item" data-toggle="modal" data-target="#modalAvisoGeral">Aviso Geral</a>
    <a class="dropdown-item" data-toggle="modal" data-target="#modalVisitantes">Visitante</a>
    <hr class="dropdown-divider">
