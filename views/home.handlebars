<div class="container">
    <div class="card-deck" id="deck">

        {{#each visitantes}}
        <div class="col-12-md tammax" style="margin-top: 35px; ">
            {{#if apresentado}}
            <div class="card mb-2 text-white bg-success">
                {{else}}
                <div class="card mb-2 text-white bg-danger">
                    {{/if}}
                    <h5 class="card-header ">Visitante </h5>
                    <div class="card-body">
                        <p class="car-text">Nome: {{nome}} </p>
                        <p class="car-text">Vem de: {{procedencia}}</p>
                        <p class="car-text">Convidado de: {{convidante}} </p>
                        <a href="/up-visitante/{{id}}/"><button class="btn btn-dark">Apresentado</button></a>
                        <a href="/del-visitante/{{id}}/"><button class="btn btn-dark">Apagar</button></a>
                    </div>
                </div>
            </div>
            {{/each}}

            {{#each avisoGeral}}
            <div class="col-12-md tammax" style="margin-top: 35px;">
                {{#if apresentado}}
                <div class="card mb-2 text-white bg-success">
                    {{else}}
                    <div class="card mb-2 text-white bg-danger">
                        {{/if}}
                        <h5 class="card-header">Aviso Geral </h5>
                        <div class="card-body">
                            <p class="car-text">Aviso: {{aviso}}</p>
                            <p class="car-text">Quem avisa: {{avisador}} </p>
                            <a href="/up-avisoGeral/{{id}}/"><button class="btn btn-dark">Apresentado</button></a>
                            <a href="/del-avisoGeral/{{id}}/"><button class="btn btn-dark">Apagar</button></a>
                        </div>
                    </div>
                </div>
                {{/each}}

        {{#each mudanca}}
        <div class="col-12-md tammax" style="margin-top: 35px;">
            {{#if apresentado}}
            <div class="card mb-2 text-white bg-success">
            {{else}}
            <div class="card mb-2 text-white bg-danger">
            {{/if}}
            <h5 class="card-header">Carta de Mudança</h5>
            <div class="card-body">
                <p class="car-text">Nome: {{nome}}</p>
                <p class="car-text">Vem de: {{procedencia}} </p>
                <a href="/viewmudanca/{{id}}"><button class="btn btn-dark">Abrir carta</button></a> <br><br>
                <a href="/up-mudanca/{{id}}/"><button class="btn btn-dark">Apresentado</button></a>
                <a href="/del-mudanca/{{id}}/"><button class="btn btn-dark">Apagar</button></a>
            </div>
            </div>
        </div>
        {{/each}}

    </div>
</div>

